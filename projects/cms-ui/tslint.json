{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [
      false,
      "attribute",
      "lib",
      "camelCase"
    ],
    "component-selector": [
      false,
      "element",
      "lib",
      "kebab-case"
    ],
    "variable-name": false,
    "import-blacklist": [
      true,
      [".*\\/constants$"],
      [".*\\/enums$"],
      [".*\\/factories$"],
      [".*\\/models$"],
      [".*\\/modules$"],
      [".*\\/pipes$"],
      [".*\\/providers$"],
      [".*\\/services$"]
    ]
  },
  "linterOptions": {
    "exclude": [
      ".*\\/index$"
    ]
  }
}
